<div class="main">
  <div class="head">
    <%= link_to "トップページ", "#", class: "home" %>
  </div>
  <div class="primary">
    <div class="section">
      <div class="tertiary">
        <div class="description">
          <div class="information">新規登録</div>
        </div>
        <div class="content">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :nickname %><br />
              <%= f.text_field :nickname, autofocus: true, class: "input" %>
            </div>

            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
            </div>

            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, class: "input" %>
            </div>

            <div class="field">
              <%= f.label :skill %><br />
              <%= f.text_area :skill, autofocus: true, class: "input", size: "60x6" %>
            </div>

            <div class="actions">
              <%= f.submit "登録する", class: "btn" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="foot">
    Copyright © TEAM-B All rights reserved.
  </div>
</div>